<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.1.xsd
    ">
    
    <context:property-placeholder location="classpath:propiedades.properties"/>
    
    <bean id="miSecretaria" class="sur.softsurena.IOC.Secretaria" scope="prototype">
           <constructor-arg ref="miUsoID"></constructor-arg>
    </bean>
    
    <!--Declarondo varios beans-->
    <bean id="miJefe" class="sur.softsurena.IOC.Jefe">
        <property name="iinforme" ref="miUsoID"></property>
    </bean>
    
    <bean id="miIngeniero" class="sur.softsurena.IOC.Ingeniero">        
        <property name="area" value="${area}"></property>
        <property name="ahno" value="${ahno}"></property>        
    </bean>
    
    <bean id="miUsoID" class="sur.softsurena.IOC.UsoID">
        
    </bean>

</beans>
